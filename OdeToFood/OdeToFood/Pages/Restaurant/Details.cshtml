@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurant.DetailsModel
@{
    ViewData["Title"] = "Details" + " " + @Model.Restaurant.Name;
}

<h2>@Model.Restaurant.Name</h2>
<div>
    ID :@Model.Restaurant.Id
</div>
<div>
    <mark>Location : @Model.Restaurant.Location</mark>
</div>

<div>
    Cuisine : @Model.Restaurant.Cuisine
</div>


@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}
<a asp-page="./List" class="btn btn-dark">All Restaurants</a>
